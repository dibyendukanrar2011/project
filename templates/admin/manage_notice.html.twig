{% extends 'base.html.twig' %}

{% block title %}{{parent()}}Manage Notice{% endblock %}

{% block body %}
<form action="" method="post">
    <div class="row">
        <div class="col-4">
            <label for="">Name</label>
            <input type="text" name="name" class="form-control" required>
        </div>
        <div class="col-3">
            <label for="">From</label>
            <input type="datetime-local" name="notice_from" class="form-control" required>
        </div>
        <div class="col-3">
            <label for="">To</label>
            <input type="datetime-local" name="notice_to" class="form-control" required>
        </div>
    </div>
    <div class="row mt-3">
        <div class="col-2">
            <input type="submit" value="Save" class="btn btn-success">
        </div>
    </div>
</form>
{% endblock %}

