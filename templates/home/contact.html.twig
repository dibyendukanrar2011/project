{% extends 'base.html.twig' %}
{% block title %}
	{{parent()}}{{title}}
{% endblock %}
{% block stylesheets %}
{{parent()}}
<style>
.back-img{
    background-image: url("https://cdn.hipwallpaper.com/i/9/98/hISTKx.jpg");
    max-width: 100%;
    height: auto;
    opacity: 91%;

}
.pad-top{
    padding-top: 10%;

}
</style>
{% endblock %}

{% block body %}
	<body class="back-img">
		<section>
			<div class="container-fluid text-black pad-top">
				<form action="" method="post">

					<div class="row">
						<div class="col-lg-4"></div>
						<div class="col-lg-4 bg-light">
							<h1 class="text-center">Contact Us</h1>
							<table class="table">

								<tr>
									<td>Full Name</td>
								</tr>
								<tr>
									<td>
										<input type="name" name="name" id="name" class="form-control" placeholder="Enter your name" required></td>
								</tr>

								<tr>
									<td>Email</td>
								</tr>
								<tr>
									<td>
										<input type="email" name="_email" id="email" class="form-control" placeholder="Enter your Email" required></td>
								</tr>
								<tr>
									<td>message</td>
								</tr>
								<tr>
									<td>
										<input type="textarea" name="msg" id="msg" class="form-control" placeholder="write a message" required></td>
								</tr>
								<tr>
									<td><input type="submit" name="sub" value="send" id="submit"></td>

								</tr>
							</table>
						</div>
						<div class="col-lg-4"></div>
					</div>
				</form>
			</section>
		</body>
	{% endblock %}
	{% block javascripts %}
		{{parent()}}
	{% endblock %}
